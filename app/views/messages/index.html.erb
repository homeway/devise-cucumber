<h1>Listing messages</h1>
<% if user_signed_in? %>
  <div><%="#{@user.name}"%></div>
  <div>
      <%= "注册于#{@user.created_at.year}年#{@user.created_at.month}月#{@user.created_at.day}日，
      登录#{@user.sign_in_count}次，
      上次登录IP是#{@user.last_sign_in_ip}" %>
  </div>
  <%= render 'form' %>
<% end %>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= get_username(message) %></td>
    <td><%= message.content %></td>
    <td><%= time_ago_message(message.created_at) %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
